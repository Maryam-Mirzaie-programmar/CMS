@model IEnumerable<MyCms.Models.Page>

@{
    ViewBag.Title = "SearchNews";
}

<section class="last-news-section border-radius">
    <header><i class="icons icon-doc-2"></i>  
        <h3> 
            نتایج جستجو برای "@ViewBag.query"
             (<span class="text-danger small"> @Model.Count() مورد یافت شد</span>)
        </h3> 
    </header>
    <ul>

        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/PageImages/@item.ImageName">
                <h2> <a href="/News/@item.PageId"> @item.Title </a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
                <a href="/News/@item.PageId" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }

    </ul>
</section>

<ul class="pagination">
    <li><a href="#">1</a></li>
    <li class="active"><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
</ul>



