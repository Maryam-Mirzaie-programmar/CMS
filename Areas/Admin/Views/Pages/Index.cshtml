@model IEnumerable<MyCms.Models.Page>

@{
    ViewBag.Title = "Index";
}

<h4>لیست</h4>

<p>
    @Html.ActionLink("افزودن آیتم جدید", "Create", null , new {@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageGroup.GroupTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visits)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowInSlider)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="/PageImages/@item.ImageName" class="img-rounded thumbnail tiny-image"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
           @item.CreateDate.ToShamsi()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visits)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowInSlider)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id = item.PageId }, new { @class = "btn btn-sm btn-warning" }) |
            @Html.ActionLink("مشاهده", "Details", new { id = item.PageId }, new { @class = "btn btn-sm btn-primary" }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.PageId }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
